@model IEnumerable<WheelOfFortune.Models.AdminCoupon>

@{
    ViewData["Title"] = "Get Coupon";
}

<h2>Please choose of the available amounts below:</h2>


@foreach (var item in Model)
{
    @if (item.Status == "Active")
    {
        <form asp-action="Redeem">

            @Html.DisplayFor(modelItem => item.Value) €      
            <a asp-action="Redeem" asp-route-id="@item.ID">Redeem</a>

        </form>
    }
}

