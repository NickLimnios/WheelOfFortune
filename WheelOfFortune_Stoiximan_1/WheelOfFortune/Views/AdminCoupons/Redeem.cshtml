@model WheelOfFortune.Models.AdminCoupon

@{
    ViewData["Title"] = "Redeem";
}

<h2>Coupon Value is @Model.Value €</h2>
<h3>Are you sure you want to Redeem this?</h3>


<div>

    <hr />
    <dl class="dl-horizontal"></dl>

    <form asp-action="Redeem">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Redeem Coupon" class="btn btn-default" />
        <a asp-action="GetCoupon">Back to List</a>
    </form>
</div>
